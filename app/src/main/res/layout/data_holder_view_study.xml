<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootViewItem"
    android:padding="10dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textTitleholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        tools:text="RecyclerView"
        android:textColor="@color/black"


        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textMessageHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        tools:text="RecyclerView"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"

        app:layout_constraintTop_toBottomOf="@id/textTitleholder"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/textCategorizedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#FA0202"
        tools:text="RecyclerView"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/textTitleholder"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/textCurrentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/black"
        tools:text="RecyclerView"

        app:layout_constraintTop_toTopOf="@id/textTitleholder"
        app:layout_constraintRight_toRightOf="parent"/>


    <ImageView
        android:id="@+id/imageTick"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:src="@android:drawable/checkbox_on_background"
        android:visibility="invisible"
        android:background="@null"



        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/imageNote"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:visibility="visible"
        android:background="@null"



        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"

        app:layout_constraintBottom_toBottomOf="@id/rootViewItem"/>

</androidx.constraintlayout.widget.ConstraintLayout>